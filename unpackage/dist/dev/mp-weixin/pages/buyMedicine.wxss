.HomeBtn {
  width: 100%;
  padding: 10rpx 0;
  color: #fff;
  background-color: #f9ae3d;
  text-align: center;
}
.content {
  padding: 20px;
  background-color: #fff;
}
.content .title {
  font-size: 18px;
}
.content .type {
  width: auto;
  margin-top: 18rpx;
}
.content .type .type_tag {
  font-size: 12px;
  padding: 3px 5px;
  border: 1px solid #f9ae3d;
  border-radius: 3px;
  color: #f9ae3d;
}
.content .price {
  color: #cf1221;
  margin-top: 10rpx;
  font-size: 16px;
}
.content .line1 {
  font-size: 18px;
  display: flex;
}
.content .tab_content {
  margin-top: 40rpx;
}
.content .detail {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.content .detail .img {
  width: 100%;
  height: 400px;
}
.footer {
  display: flex;
  width: 100%;
  height: 60px;
  padding: 10px;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}
.footer .callme {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
}
.footer .online {
  flex: 2;
}


.u-navbar .u-icon--right {
  display: none;
}
.header_box {
  margin-top: 64px;
  position: fixed;
  left: 0;
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 999;
}
.header_box .title_big {
  font-size: 20px;
  font-weight: 400;
  color: #ff8515;
}
.header_box .search_doctor .groupname {
  color: #ff8515;
}
.title {
  font-size: 20px;
  font-weight: 400;
  color: #ff8515;
  text-align: center;
}
.menu_nav {
  margin-top: 10px;
  background-color: #fff;
  padding: 20px;
}
.menu_nav .u-icon__icon {
  padding-top: 0 !important;
}
.menu_nav .icon_bgc {
  margin: 10px 0;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background-color: #fff3e9;
  display: flex;
  justify-content: center;
  align-items: center;
}
.menu_nav .icon_bgc .img {
  width: 60%;
  height: 60%;
}
.grid-text {
  font-size: 14px;
  color: #909399;
  padding: 10rpx 0 20rpx 0rpx;
  box-sizing: border-box;
}
.doctor_intro {
  background-color: #fff;
  padding: 0 20px 20px;
}
.uni-margin-wrap {
  width: 100%;
}
.swiper {
  height: 400rpx;
  padding: 20px;
  border: 1px #e2e2e2 solid;
  border-radius: 4%;
}
.swiper-item {
  display: flex;
  height: 300rpx;
  text-align: center;
  background-color: #fff;
}
.swiper-item .left_box {
  width: 40%;
  margin-right: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.swiper-item .left_box .img {
  width: 120px;
  height: 120px;
}
.swiper-item .right_box {
  width: 60%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.swiper-item .right_box .team {
  font-size: 20px;
}
.swiper-item .right_box .desc {
  display: flex;
  text-align: center;
  font-size: 15px;
}
.dynamic,
.cooperation {
  padding: 20px 0;
  background-color: #fff;
  margin-top: 15px;
}
.dynamic .title_box,
.cooperation .title_box {
  height: 40px;
  display: flex;
  justify-content: space-between;
  padding: 0 20px;
}
.dynamic .title_box .title,
.cooperation .title_box .title {
  margin-left: 120px;
}
.dynamic .title_box .right_more,
.cooperation .title_box .right_more {
  display: flex;
}
.dynamic .title_box .right_more .showMore,
.cooperation .title_box .right_more .showMore {
  line-height: 40px;
}
.hospital {
  padding: 10px 10px;
  display: flex;
}
.hospital .img {
  width: 120px;
  height: 110px;
}
.hospital .information {
  margin-left: 15px;
  display: flex;
  flex-direction: column;
}
.hospital .information .hospital_name {
  font-size: 18px;
  margin-bottom: 5px;
}
.hospital .hospital_detail {
  display: flex;
}
.hospital .hospital_detail .detail {
  color: #ff8515;
}
.service {
  margin-top: 15px;
  padding: 10px 10px;
  background-color: #fff;
}
.service .item {
  display: flex;
  color: #243b64;
  margin-bottom: 10px;
}
.service .item .itemCon {
  margin-left: 15px;
}
.service .title {
  padding: 10px 0;
}
.service .daohang {
  margin: 0 auto;
}


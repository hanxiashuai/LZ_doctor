.header_box {
  position: fixed;
  top: 60;
  left: 0;
  width: 100%;
  height: 100rpx;
  padding: 0 20rpx;
  background-color: rgba(225, 225, 225, 0.5);
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 999;
}
.header_box .title_big {
  font-size: 20px;
  font-weight: 400;
}
.title {
  font-size: 18px;
  font-weight: 400;
  text-align: center;
}
.menu_nav {
  margin-top: 20px;
  background-color: #fff;
}
.menu_nav .u-icon__icon {
  padding-top: 0 !important;
}
.menu_nav .icon_bgc {
  margin-top: 10px;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.menu_nav .icon_bgc image {
  width: 100%;
  height: 100%;
}
.grid-text {
  font-size: 14px;
  color: #909399;
  padding: 10rpx 0 20rpx 0rpx;
  box-sizing: border-box;
}
.doctor_intro {
  background-color: #fff;
}
.doctor_intro ._p {
  padding-top: 10px;
}
.dynamic,
.cooperation {
  padding: 20px 0;
  background-color: #fff;
  margin-top: 15px;
}
.dynamic .title_box,
.cooperation .title_box {
  height: 40px;
  display: flex;
  justify-content: space-between;
  padding: 0 20px;
}
.dynamic .title_box ._p,
.cooperation .title_box ._p {
  margin-left: 120px;
}
.dynamic .title_box .right_more,
.cooperation .title_box .right_more {
  display: flex;
}
.dynamic .title_box .right_more ._span,
.cooperation .title_box .right_more ._span {
  line-height: 40px;
}
.hospital {
  padding: 10px 10px;
  display: flex;
}
.hospital image {
  width: 100px;
  height: 100px;
}
.hospital .information {
  margin-left: 10px;
  display: flex;
  flex-direction: column;
}
.hospital .hospital_detail {
  display: flex;
}
.service {
  margin-top: 15px;
  padding: 10px 10px;
  background-color: #fff;
}
.service .item {
  display: flex;
  color: #243b64;
  margin-bottom: 10px;
}
.service .item ._span {
  margin-left: 15px;
}
.service .title {
  padding: 10px 0;
}
.service .daohang {
  margin: 0 auto;
}

